<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <org.opencv.android.JavaCameraView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        android:id="@+id/camera_view"
        opencv:show_fps="true"
        opencv:camera_id="any" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/camera_view"
        android:layout_marginLeft="118dp"
        android:layout_marginStart="118dp"
        android:id="@+id/TV_1" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/TV_1"
        android:layout_alignEnd="@+id/TV_1"
        android:layout_marginRight="52dp"
        android:layout_marginEnd="52dp"
        android:id="@+id/TV_2"
        android:layout_below="@+id/TV_1" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:onClick="PB_click"
        android:id="@+id/button"
        android:layout_below="@+id/TV_2"
        android:layout_toRightOf="@+id/TV_2"
        android:layout_toEndOf="@+id/TV_2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="1"
        android:ems="10"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/TV_2"
        android:layout_alignStart="@+id/TV_2"
        android:layout_marginTop="111dp"
        android:id="@+id/ET_start" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="200"
        android:ems="10"
        android:layout_below="@+id/ET_start"
        android:layout_alignLeft="@+id/ET_start"
        android:layout_alignStart="@+id/ET_start"
        android:layout_marginTop="21dp"
        android:id="@+id/ET_end" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/TV_1"
        android:layout_alignStart="@+id/TV_1"
        android:layout_marginTop="18dp"
        android:onClick="PB2_click"
        android:id="@+id/PB_2" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/PB_2"
        android:layout_toRightOf="@+id/PB_2"
        android:layout_toEndOf="@+id/PB_2"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/TV_3" />

    <Button
        android:text="test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PB_track"
        android:layout_alignLeft="@+id/PB_track"
        android:layout_alignStart="@+id/PB_track"
        android:layout_marginTop="11dp"
        android:onClick="PB_test_click"
        android:id="@+id/PB_test" />

    <Button
        android:text="Track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="PB_track_click"
        android:id="@+id/PB_track"
        android:layout_above="@+id/ET_start"
        android:layout_toRightOf="@+id/camera_view"
        android:layout_toEndOf="@+id/camera_view"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="26dp" />

    <Button
        android:text="transform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TV_2"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:onClick="PB_transform_click"
        android:id="@+id/PB_transform" />

</RelativeLayout>
